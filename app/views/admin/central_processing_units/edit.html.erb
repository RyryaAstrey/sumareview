<div class="container">
  <div class="row border-bottom border-dark pb-3">
    <h3><strong>「<%= @central_processing_unit.name %>」の名前変更</strong></h3>
  </div>
  
  <p class="mt-4"><strong>></strong>下記の情報を入力してください</p>
  <%= render "layouts/flash" %>
  
  <%= form_with model: @central_processing_unit, url: admin_central_processing_unit_path(@central_processing_unit.id), method: :patch do |f| %>
    <table class="table border border-dark mt-3 shadow-sm">
      <thead class="thead-dark">
        <tr>
          <th class="text-white">登録情報</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody class="bg-white">
        <tr>
          <td class="col-3 bg-light text-right"><strong>スペック名</strong></td>
          <td class="col-6"><%= f.text_field :name, class: "form-control col-6" %></td>
          <td colspan=""></td>
        </tr>
      </tbody>
    </table>
    
    <div class="text-center mt-4">
      <%= f.submit "登録する", class: "font-weight-bold btn btn-lg btn-warning rounded-0" %>
    </div>
  <% end %>
</div>