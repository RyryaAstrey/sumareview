<div class="container">
  <div class="row">
    
    <div class="col-3">
      <%= render "admin/searches/form" %>
    </div>
    
    <div class="col-6">
      <div class="container">
        <h4><strong>記事一覧</strong></h4>
        
        <% @items.each do |item| %>
          <div class="card  bg-white border border-dark p-2 mt-3">
            <div class="row">
              <div class="col-3">
                <%= link_to admin_item_path(item.id) do %>
                  <%= image_tag item.get_image, class: "w-100 h-100" %>
                <% end %>
              </div>
              <div class="col-9 py-1">
                <div class="d-flex">
                  <h6 class="font-weight-bold"><%= link_to item.name, admin_item_path(item.id) %></h6>
                  <% if item.is_draft == true %>
                    <h6 class="text-success font-weight-bold ml-auto">末投稿</h6>
                  <% end %>
                </div>
                <div class="d-flex mt-2">
                  <!--値段の中が空（下書き時など）だとエラーが出るため、条件分岐-->
                  <% if item.price.nil? %>
                    <%= item.price %>円
                  <% else %>
                    <%= item.price.to_s(:delimited) %>円
                  <% end %>
                  <% if item.operation_system.nil? %>
                  <% else %>
                    <%= item.operation_system.name %>
                  <% end %>
                  防水<%= item.waterploof_i18n %>
                </div>
                <div class="d-flex">
                  <span class="my-auto">総評価：<%#= item.comment.score %></span>
                  <%= link_to "編集", edit_admin_item_path(item.id), class: "btn btn-success rounded-0 ml-auto" %>
                </div>
              </div>
              
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="col-3">
      <%= render "admin/items/new_btn" %>
    </div>
    
  </div>
</div>