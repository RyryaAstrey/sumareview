<div class="container">
  <div class="row border-bottom border-dark">
    <h3><strong>【<%= @user.name %>】さんの情報</strong></h3>
  </div>
  
  <div class="border border-dark mt-5">
    <table class="table  mb-0 bg-white">
      <tr>
        <th class="col-3">ユーザーID</th>
        <td class="col-9"><%= @user.id %></td>
      </tr>
      <tr>
        <th class="col-3">名前</th>
        <td class="col-9"><%= @user.name %></td>
      </tr>
      <tr>
        <th class="col-3">メールアドレス</th>
        <td class="col-9"><%= @user.email %></td>
      </tr>
      <tr>
        <th class="col-3">会員ステータス</th>
        <td class="col-9">
          <% if @user.is_deleted == false %>
            <span class="text-success">有効</span>
          <% else %>
            <span class="text-danger">退会済み</span>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  
  <div class="d-flex flex-column justify-content-center mt-5">
    <div class="mx-auto">
      <%= link_to "アカウント情報を編集する", edit_admin_user_path(@user.id), class: "font-weight-bold btn btn-warning rounded-0" %>
    </div>
    <div class="mx-auto mt-3">
      <%= render "layouts/flash" %>
    </div>
  </div>
  
  
</div>