<div class="">
  <table class="table table-borderless bg-white mb-0">
    <thead class="contents-head">
      <tr>
        <th>新着記事</th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <%# if item.is_draft == false %>
          <tr>
            <% if admin_signed_in? %>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <% else %>
              <td><%= link_to item.name, item_path(item.id) %></td>
            <% end %>
          </tr>
        <%# end %>
      <% end %>
    </tbody>
  </table>
</div>