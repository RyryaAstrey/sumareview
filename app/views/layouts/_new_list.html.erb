<div class="">
  <table class="table bg-white mb-0">
    <thead class="bg-deepskyblue">
      <tr>
        <th>新着記事</th>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <% if item.is_draft == false %>
          <tr>
            <td><%= link_to item.name, item_path(item.id) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>