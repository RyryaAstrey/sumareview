<div class="container">
  <%= render "layouts/flash" %> 
  <div class="row">
    
    <div class="d-flex flex-column col-3">
      <%= render "public/categories/menu" %>
      <%= render "public/searches/form",url: search_path %>
      <%= render "public/categories/maker", makers: @makers %>
      <%= render "public/categories/operation_system", operation_systems: @operation_systems %>
    </div>
    
    <div class="col-6 px-0">
      
       <div class="bg-white">
        <h4 class="contents-head"><strong><%= @operation_system.name %>の端末一覧</strong></h4>
        
        <div class="p-3">
          <%= render "public/items/index", items: @operation_system_items, path: operation_system_path, cost_path: operation_system_path(row_cost: "true"), score_path: operation_system_path(score_count: "true"), old_path: operation_system_path(latest: "true") %>
        </div>
      </div>
      
    </div>
    
    <div class="col-3">
      <%= render "layouts/new_list", items: @new_list_items %>
    </div>
    
  </div>
</div>