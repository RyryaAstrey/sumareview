<% list.each do |item| %>
  <td class="col-6">
    <div class="border mt-2">
      <%= link_to item_path(item.id), class: "link-style-none" do %>
        <div class="border-bottom font-weight-bold p-1">
          <h5><%= item.name %></h5>
        </div>
      <% end %>
      <div class="p-2 d-flex">
        <%= link_to item_path(item.id), class: "link-style-none" do %>
          <div class="shadow-sm">
            <% if item.images.attached? %>
              <%= image_tag item.images.first, size: "150x150" %>
            <% else %>
              <% image_tag 'no_image.jpg', size: "100x100" %>
            <% end %>
          </div>
        <% end %>
        <div class="d-flex flex-column ml-3 font-weight-bold w-100">
          <p class="mb-1">メーカー：<%= item.maker.name %></p>
          <p class="mb-1">価格：<%= item.price&.to_s(:delimited) %>円</p>
          <div class="mt-auto ml-auto">
            <%= link_to list_destroy_item_interests_path(item), method: :delete, remote: true, class: "link-style-none" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </td>
<% end %>